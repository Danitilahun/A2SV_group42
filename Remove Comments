answer = []
        comment = False # True for block comment 
        
        for line in source: 
            if not comment: answer.append("") # if not started as comment
            index = 0
            length=len(line)
            while index < length: 
                if comment: 
                    if line[index:index+2] == "*/": 
                        comment = False 
                        index += 1
                else:  
                    if line[index:index+2] == "//": break 
                    elif line[index:index+2] == "/*": 
                        comment = True 
                        index += 1
                    else: answer[-1]+=line[index]
                index += 1
        return filter(None, answer)
